<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="Regression" verbose="1" >

  <test name="Regression" >
    <classes>
      <class name="com.bookshare.tests.LoginTests">
        <methods>
          <exclude name=".*Negative.*"></exclude>
        </methods>
      </class>
      <class name="com.bookshare.tests.LogOutTests" />
      <class name="com.bookshare.tests.HeaderTests" />
      <class name="com.bookshare.tests.FooterTests" />
      <class name="com.bookshare.tests.AddBookTests">
        <methods>
          <exclude name="addNewBookPositiveTest"></exclude>
        </methods>
      </class>
      <class name="com.bookshare.tests.LeftSideMenuTests"/>
<!--      <class name="com.bookshare.tests.SearchBookTests"/>-->
    </classes>
  </test>

</suite>